 @{
  Layout = "_Layout";
}
@using Shop.Models;
<div class="container">
  <div class="jumbotron">
    <h1 class="display-4">Treats</h1>
  </div>
  <div class="card">
    <div class="card-header"> 
      <h5>List of Treats</h5>
    </div>
    <div class="card-body">
      @if(Model.Count == 0)
      {
        <h6>There are no Treats at this time.</h6>
      }
      <ul>
        @foreach(Treat treat in Model)
        {
          <li>@treat.Name | @Html.ActionLink("details","details", new {id = treat.TreatId})</li>
        }
      </ul>
      <div>
        @if(@User.Identity.IsAuthenticated)
        {
        <button class="btn btn-info" onclick="window.location.href='/treats/create';">New Treats</button>

        }
        <button class="btn btn-info" onclick="window.location.href='/';">Home</button>
      </div>
    </div>
  </div>
</div>
@Html.Partial("_Header")
@Html.Partial("_Footer")