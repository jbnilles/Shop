@{
  Layout = "_Layout";
}
@model Treats.Models.Flavor;

<div class="container">
  <div class="jumbotron">
    <h1 class="display-4">Delete @Model.Name</h1>
  </div>
  <div class="card card-body">
    <h3>Are you sure you want to Delete this @Model.Name?</h3>
    @Html.DisplayFor(model => model.Name)
    @using (Html.BeginForm())
    {
      <input class="btn btn-outline-dark" type="submit" value="Delete" />
      <button class="btn btn-outline-dark" type="button" onclick="window.location.href='/flavors/details/@Model.FlavorId';">Cancel</button>
    }
  </div>
    @Html.Partial("Header")
  @Html.Partial("Footer")